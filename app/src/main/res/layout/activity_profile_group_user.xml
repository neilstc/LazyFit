<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileGroupUserActivity">

    <include
        layout= "@layout/app_bar_layout"
        android:id="@+id/group_member_add_bar"
        >
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_activity"
        android:layout_below="@id/group_member_add_bar"
        >



        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/profile_image"
        />

    <TextView
        android:id="@+id/group_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:fontFamily="casual"
        android:text="User Name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/group_user_aboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:fontFamily="casual"
        android:text="hey i'm using LazyFit app"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/delete_member_button"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_below="@id/group_user_aboutMe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorRed"
            android:padding="4dp"
            android:text="Delete Member"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/push_notification_button"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_below="@id/group_user_aboutMe"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary"
            android:padding="4dp"
            android:text="Send A Remainder "
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/send_message_button"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_below="@id/group_user_aboutMe"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/delete_member_button"
            android:background="@color/colorPrimary"
            android:padding="4dp"
            android:text="Send A Message "
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_user_aboutMe"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="22dp"
            android:fontFamily="casual"
            android:text="Last Seen :"
            android:textSize="15dp" />

    </RelativeLayout>

</RelativeLayout>